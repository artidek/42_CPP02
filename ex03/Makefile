CC = c++
CFLAGS = -g -Wall -Wextra -Werror -std=c++98

NAME = bsp

$(NAME):
	$(CC) $(CFLAGS) Fixed.cpp Point.cpp bsp.cpp main.cpp -o $(NAME)

all: $(NAME)
clean:
	rm -f $(NAME)
fclean:
	rm -f $(NAME)
re: fclean $(NAME)
.PHONY: all clean fclean re
